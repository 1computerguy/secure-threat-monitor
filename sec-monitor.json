{
  "variables": {
    "disksize": "204800",
    "esx_datastore": "datastore0",
    "esx_host": "192.168.1.101",
    "esx_password": "1qaz2wsx!QAZ@WSX",
    "esx_username": "root",
    "eth_type": "vmxnet3",
    "host_portgroup": "Management",
    "iso_checksum": "b3cac3a62659261af7ede1cbb81d5af544a26d19",
    "iso_checksum_type": "sha1",
    "iso_file": "./packer/ISO/photon-3.0.iso",
    "numvcpus": "4",
    "product_version": "3.0GA",
    "ramsize": "16384",
    "ssh_password": "SomeSecurePassword",
    "ssh_username": "root",
    "vmname": "Secure-Traffic-Monitor",
    "script_dir": "packer/scripts"
  },
  "sensitive-variables": [
    "esx_password",
    "ssh_password"
  ],
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "vmlinuz initrd=initrd.img root=/dev/ram0 loglevel=3 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.json photon.media=cdrom",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{ user `disksize` }}",
      "disk_type_id": 0,
      "guest_os_type": "other3xlinux-64",
      "headless": false,
      "http_directory": "{{ user `script_dir` }}",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_file`}}",
      "name": "vmware-desktop",
      "shutdown_command": "shutdown -h now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "60m",
      "ssh_username": "{{user `ssh_username`}}",
      "type": "vmware-iso",
      "version": 16,
      "vm_name": "{{ user `vmname` }}",
      "vmdk_name": "sec-monitor-disk1",
      "cpus": "{{ user `numvcpus` }}",
      "memory": "{{ user `ramsize` }}",
      "network_adapter_type": "{{ user `eth_type` }}",
      "vmx_data_post": {
        "displayname": "{{ user `vmname` }}",
        "usb.present": "false",
        "ethernet0.connectionType": "nat",
        "ethernet0.addressType": "generated",
        "ethernet0.virtualDev": "vmxnet3",
        "ethernet1.connectionType": "hostonly",
        "ethernet1.addressType": "generated",
        "ethernet1.virtualDev": "vmxnet3"
      },
      "format": "ova"
    },
    {
      "boot_command": [
        "<esc><wait>",
        "vmlinuz initrd=initrd.img root=/dev/ram0 loglevel=3 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.json photon.media=cdrom",
        "<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{ user `disksize` }}",
      "disk_type_id": "thin",
      "format": "ova",
      "guest_os_type": "vmwarePhoton64Guest",
      "headless": false,
      "http_directory": "{{ user `script_dir` }}",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_file` }}",
      "name": "vmware-esxi",
      "remote_datastore": "{{ user `esx_datastore` }}",
      "remote_host": "{{ user `esx_host` }}",
      "remote_password": "{{ user `esx_password` }}",
      "remote_type": "esx5",
      "remote_username": "{{ user `esx_username` }}",
      "shutdown_command": "/sbin/shutdown -h now",
      "skip_compaction": true,
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": 22,
      "ssh_timeout": "60m",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "vmware-iso",
      "version": "16",
      "vm_name": "{{ user `vmname` }}",
      "vmx_data": {
        "annotation": "Version: {{ user `version` }}",
        "ethernet0.addressType": "generated",
        "ethernet0.networkName": "{{ user `esx_portgroup` }}",
        "ethernet0.present": "TRUE",
        "ethernet0.startConnected": "TRUE",
        "ethernet0.virtualDev": "{{ user `eth_type` }}",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "memsize": "{{ user `ramsize` }}",
        "numvcpus": "{{ user `numvcpus` }}"
      },
      "vnc_disable_password": true
    },
    {
      "boot_command": [
        "<esc><wait>",
        "vmlinuz initrd=initrd.img root=/dev/ram0 loglevel=3 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.json photon.media=cdrom",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{ user `disksize` }}",
      "guest_os_type": "Linux_64",
      "hard_drive_interface": "scsi",
      "headless": false,
      "http_directory": "{{ user `script_dir` }}",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_file`}}",
      "name": "virtualbox",
      "shutdown_command": "shutdown -h now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "60m",
      "ssh_username": "{{user `ssh_username`}}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `ramsize` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `numvcpus` }}"
        ]
      ],
      "vm_name": "{{ user `vmname` }}"
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "only": [
        "virtualbox"
      ],
      "inline": [ "packer/scripts/ova-export.bat" ]
    }
  ],
  "provisioners": [
    {
      "script": "{{ user `script_dir` }}/install-packages.sh",
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/build-environment.sh",
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/user_provisioning.sh",
      "type": "shell"
    },
    {
      "only": [
        "vmware-desktop",
        "vmware-esxi"
      ],
      "script": "{{ user `script_dir` }}/sharedfolders_prep.sh",
      "type": "shell"
    },
    {
      "only": [
        "virtualbox"
      ],
      "script": "{{ user `script_dir` }}/vagrant-vbox_additions.sh",
      "type": "shell"
    },
    {
      "destination": "/etc/modules-load.d/virtualbox.conf",
      "only": [
        "virtualbox"
      ],
      "source": "{{ user `script_dir` }}/virtualbox-load-module.conf",
      "type": "file"
    },
    {
      "inline": [
        "sed -i '/linux/ s/$/ net.ifnames=0/' /boot/grub2/grub.cfg"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "echo 'GRUB_CMDLINE_LINUX=\"net.ifnames=0\"' >> /etc/default/grub"
      ],
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/security_check.sh",
      "type": "shell"
    },
    {
      "inline": [
        "sed -i 's/OS/Linux/' /etc/photon-release"
      ],
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/remove-packages.sh",
      "type": "shell"
    }
  ]
}