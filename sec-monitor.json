{
  "variables": {
    "iso_checksum": "sha1:1C82F74495C4D9257C973FD031BC5EBDE3D5B9A7",
    "iso_file": "./packer/ISO/ubuntu-20.04.1-live-server-amd64.iso",
    "iso_url":  "https://releases.ubuntu.com/20.04/ubuntu-20.04.1-live-server-amd64.iso",
    "numvcpus": "8",
    "product_version": "0.1",
    "ramsize": "16384",
    "disksize1": "40960",
    "disksize2": "61440",
    "disksize3": "204800",
    "eth_type": "vmxnet3",
    "ssh_password": "SomeSecurePassword",
    "ssh_username": "secadmin",
    "vmname": "Encrypted-Traffic-Monitor",
    "script_dir": "packer/scripts",
    "env_dir": "packer/environment",
    "esx_host": "192.168.1.100",
    "vcenter_host": "vcenter.home.lab",
    "vcenter_username": "administrator@vsphere.local",
    "vcenter_password": "1qaz2wsx!QAZ@WSX",
    "vcenter_datacenter":"Datacenter",
    "vcenter_datastore": "local-store",
    "vcenter_vmfolder": "Template",
    "mgmt_portgroup": "VM Network",
    "monitor_portgroup": "Internet"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "name": "vmware-desktop",
      "vm_name": "{{ user `vmname` }}",
      "version": 16,
      "guest_os_type": "ubuntu-64",
      "cpus": "{{ user `numvcpus` }}",
      "memory": "{{ user `ramsize` }}",
      "disk_size": "{{ user `disksize1` }}",
      "disk_additional_size": [
        "{{ user `disksize2` }}",
        "{{ user `disksize3` }}"
      ],
      "disk_type_id": 0,
      "disk_adapter_type": "scsi",
      "network_adapter_type": "{{ user `eth_type` }}",
      "vmx_data": {
          "disk.EnableUUID": "TRUE"
      },
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_urls": ["{{ user `iso_file` }}","{{ user `iso_url` }}"],
      "boot_command": [
        "<enter><enter><f6><esc><wait> ",
        "autoinstall ds=nocloud-net;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "headless": false,
      "http_directory": "{{ user `env_dir` }}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_timeout": "30m",
      "ssh_handshake_attempts": "60",
      "shutdown_command": "shutdown -P now",
      "format": "ova"
    },
    {
      "type": "vsphere-iso",
      "name": "vmware-esxi",
      "vm_name": "{{ user `vmname` }}",
      "vm_version": 15,
      "guest_os_type": "ubuntu64Guest",
      "CPUs": "{{ user `numvcpus` }}",
      "RAM": "{{ user `ramsize` }}",
      "storage": [
        {
          "disk_size": "{{ user `disksize1` }}",
          "disk_thin_provisioned": true
        },
        {
          "disk_size": "{{ user `disksize2` }}",
          "disk_thin_provisioned": true
        },
        {
          "disk_size": "{{ user `disksize3` }}",
          "disk_thin_provisioned": true
        }
      ],
      "network_adapters": [
        {
          "network": "{{ user `mgmt_portgroup` }}",
          "network_card": "vmxnet3"
        },
        {
          "network": "{{ user `monitor_portgroup` }}",
          "network_card": "vmxnet3"
        }
      ],
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_file` }}",
      "boot_command": [
        "<enter><enter><f6><esc><wait> ",
        "autoinstall ds=nocloud-net;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "http_directory": "{{ user `env_dir` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "60m",
      "shutdown_command": "/sbin/shutdown -h now",
      "vcenter_server": "{{ user `vcenter_host` }}",
      "host": "{{ user `esx_host` }}",
      "username": "{{ user `vcenter_username` }}",
      "password": "{{ user `vcenter_password` }}",
      "insecure_connection": "true",
      "datacenter": "{{ user `vcenter_datacenter` }}",
      "datastore": "{{ user `vcenter_datastore` }}",
      "cluster": "{{ user `vcenter_cluster` }}",
      "folder": "{{ user `vcenter_vmfolder` }}"
    },
    {
      "type": "virtualbox-iso",
      "name": "virtualbox",
      "vm_name": "{{ user `vmname` }}",
      "guest_os_type": "Ubuntu_64",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `numvcpus` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `ramsize` }}"
        ]
      ],
      "disk_size": "{{ user `disksize` }}",
      "hard_drive_interface": "scsi",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_file`}}",
      "boot_command": [
        "<enter><enter><f6><esc><wait> ",
        "autoinstall ds=nocloud-net;seedfrom=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "http_directory": "{{ user `script_dir` }}",
      "headless": false,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "60m",
      "shutdown_command": "shutdown -h now"
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "only": [
        "virtualbox"
      ],
      "inline": [ "packer/scripts/ova-export.bat" ]
    }
  ],
  "provisioners": [
    {
      "script": "{{ user `script_dir` }}/install-packages.sh",
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/user_provisioning.sh",
      "type": "shell"
    },
    {
      "type": "file",
      "source": "{{ user `env_dir` }}/setup.service",
      "destination": "/lib/systemd/system/setup.service"
    },
    {
      "type": "file",
      "source": "{{ user `env_dir` }}/setup.sh",
      "destination": "/usr/local/bin/setup.sh"
    },
    {
      "script": "{{ user `script_dir` }}/build-environment.sh",
      "type": "shell"
    },
    {
      "only": [
        "vmware-desktop",
        "vmware-esxi"
      ],
      "script": "{{ user `script_dir` }}/sharedfolders_prep.sh",
      "type": "shell"
    },
    {
      "only": [
        "virtualbox"
      ],
      "script": "{{ user `script_dir` }}/vagrant-vbox_additions.sh",
      "type": "shell"
    },
    {
      "type": "file",
      "only": [
        "virtualbox"
      ],
      "source": "{{ user `script_dir` }}/virtualbox-load-module.conf",
      "destination": "/etc/modules-load.d/virtualbox.conf"
    },
    {
      "inline": [
        "sed -i '/linux/ s/$/ net.ifnames=0/' /boot/grub2/grub.cfg"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "echo 'GRUB_CMDLINE_LINUX=\"net.ifnames=0\"' >> /etc/default/grub"
      ],
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/security_check.sh",
      "type": "shell"
    },
    {
      "inline": [
        "sed -i 's/OS/Linux/' /etc/photon-release"
      ],
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/remove-packages.sh",
      "type": "shell"
    }
  ]
}