{
  "variables": {
    "disksize": "204800",
    "eth_type": "vmxnet3",
    "iso_checksum": "b3cac3a62659261af7ede1cbb81d5af544a26d19",
    "iso_checksum_type": "sha1",
    "iso_file": "./packer/ISO/photon-3.0.iso",
    "numvcpus": "4",
    "product_version": "3.0GA",
    "ramsize": "16384",
    "ssh_password": "SomeSecurePassword",
    "ssh_username": "root",
    "vmname": "Secure-Traffic-Monitor",
    "script_dir": "packer/scripts",
    "env_dir": "packer/environment",
    "esx_host": "192.168.1.100",
    "vcenter_host": "vcenter.home.lab",
    "vcenter_username": "administrator@vsphere.local",
    "vcenter_password": "1qaz2wsx!QAZ@WSX",
    "vcenter_datacenter":"Datacenter",
    "vcenter_datastore": "local-store",
    "vcenter_vmfolder": "Template",
    "vcenter_portgroup": "VM Network",
    "localip": "192.168.1.213"
  },
  "sensitive-variables": [
    "esx_password",
    "ssh_password"
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "name": "vmware-desktop",
      "vm_name": "{{ user `vmname` }}",
      "version": 16,
      "guest_os_type": "other3xlinux-64",
      "cpus": "{{ user `numvcpus` }}",
      "memory": "{{ user `ramsize` }}",
      "disk_size": "{{ user `disksize` }}",
      "disk_type_id": 0,
      "network_adapter_type": "{{ user `eth_type` }}",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_file`}}",
      "boot_command": [
        "<esc><wait>",
        "vmlinuz initrd=initrd.img root=/dev/ram0 loglevel=3 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.json photon.media=cdrom",
        "<enter>"
      ],
      "boot_wait": "5s",
      "headless": false,
      "http_directory": "{{ user `script_dir` }}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_timeout": "60m",
      "shutdown_command": "shutdown -h now",
      "format": "ova"
    },
    {
      "type": "vsphere-iso",
      "name": "vmware-esxi",
      "vm_name": "{{ user `vmname` }}",
      "vm_version": 15,
      "guest_os_type": "other3xLinux64Guest",
      "CPUs": "{{ user `numvcpus` }}",
      "RAM": "{{ user `ramsize` }}",
      "storage": [
        {
          "disk_size": "{{ user `disksize` }}",
          "disk_thin_provisioned": true
        }
      ],
      "network_adapters": [
        {
          "network": "{{ user `vcenter_portgroup` }}",
          "network_card": "vmxnet3"
        }
      ],
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_file` }}",
      "boot_command": [
        "<esc><wait>",
        "vmlinuz initrd=initrd.img root=/dev/ram0 loglevel=3 ks=http://{{ user `localip` }}:{{ .HTTPPort }}/kickstart.json photon.media=cdrom",
        "<enter>"
      ],
      "boot_wait": "10s",
      "http_directory": "{{ user `script_dir` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "60m",
      "shutdown_command": "/sbin/shutdown -h now",
      "vcenter_server": "{{ user `vcenter_host` }}",
      "host": "{{ user `esx_host` }}",
      "username": "{{ user `vcenter_username` }}",
      "password": "{{ user `vcenter_password` }}",
      "insecure_connection": "true",
      "datacenter": "{{ user `vcenter_datacenter` }}",
      "datastore": "{{ user `vcenter_datastore` }}",
      "cluster": "{{ user `vcenter_cluster` }}",
      "folder": "{{ user `vcenter_vmfolder` }}",
      "convert_to_template": true
    },
    {
      "boot_command": [
        "<esc><wait>",
        "vmlinuz initrd=initrd.img root=/dev/ram0 loglevel=3 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.json photon.media=cdrom",
        "<enter>"
      ],
      "boot_wait": "5s",
      "disk_size": "{{ user `disksize` }}",
      "guest_os_type": "Linux_64",
      "hard_drive_interface": "scsi",
      "headless": false,
      "http_directory": "{{ user `script_dir` }}",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_file`}}",
      "name": "virtualbox",
      "shutdown_command": "shutdown -h now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "60m",
      "ssh_username": "{{user `ssh_username`}}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `ramsize` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `numvcpus` }}"
        ]
      ],
      "vm_name": "{{ user `vmname` }}"
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "only": [
        "virtualbox"
      ],
      "inline": [ "packer/scripts/ova-export.bat" ]
    }
  ],
  "provisioners": [
    {
      "script": "{{ user `script_dir` }}/user_provisioning.sh",
      "type": "shell"
    },
    {
      "type": "file",
      "source": "{{ user `env_dir` }}/.bashrc",
      "destination": "/home/monadmin/.bashrc"
    },
    {
      "type": "file",
      "source": "{{ user `env_dir` }}/setup.service",
      "destination": "/lib/systemd/system/setup.service"
    },
    {
      "type": "file",
      "source": "{{ user `env_dir` }}/setup.sh",
      "destination": "/root/setup.sh"
    },
    {
      "script": "{{ user `script_dir` }}/install-packages.sh",
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/build-environment.sh",
      "type": "shell"
    },
    {
      "only": [
        "vmware-desktop",
        "vmware-esxi"
      ],
      "script": "{{ user `script_dir` }}/sharedfolders_prep.sh",
      "type": "shell"
    },
    {
      "only": [
        "virtualbox"
      ],
      "script": "{{ user `script_dir` }}/vagrant-vbox_additions.sh",
      "type": "shell"
    },
    {
      "type": "file",
      "only": [
        "virtualbox"
      ],
      "source": "{{ user `script_dir` }}/virtualbox-load-module.conf",
      "destination": "/etc/modules-load.d/virtualbox.conf"
    },
    {
      "inline": [
        "sed -i '/linux/ s/$/ net.ifnames=0/' /boot/grub2/grub.cfg"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "echo 'GRUB_CMDLINE_LINUX=\"net.ifnames=0\"' >> /etc/default/grub"
      ],
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/security_check.sh",
      "type": "shell"
    },
    {
      "inline": [
        "sed -i 's/OS/Linux/' /etc/photon-release"
      ],
      "type": "shell"
    },
    {
      "script": "{{ user `script_dir` }}/remove-packages.sh",
      "type": "shell"
    }
  ]
}